{
  "expo": {
    "name": "365 - Plant a Memory",
    "slug": "365-plant-memory",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.baragu.plantmemory"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#000000"
      },
      "package": "com.baragu.plantmemory"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-font",
      "expo-sqlite",
      [
        "react-native-android-widget",
        {
          "widgets": [
            {
              "name": "YearWidget",
              "label": "365 Dot Grid",
              "minWidth": "180dp",
              "minHeight": "180dp",
              "description": "Minimal dot grid showing year progress",
              "previewImage": "./assets/widget-preview.png",
              "resizeMode": "horizontal|vertical"
            },
            {
              "name": "PlantGrowthWidget",
              "label": "365 Plant Growth",
              "minWidth": "110dp",
              "minHeight": "110dp",
              "description": "Watch your memory plant grow throughout the year",
              "previewImage": "./assets/widget-preview.png",
              "resizeMode": "horizontal|vertical"
            },
            {
              "name": "CircularProgressWidget",
              "label": "365 Progress",
              "minWidth": "110dp",
              "minHeight": "110dp",
              "description": "Circular year progress indicator",
              "previewImage": "./assets/widget-preview.png",
              "resizeMode": "horizontal|vertical"
            },
            {
              "name": "DaysStripWidget",
              "label": "365 Week View",
              "minWidth": "250dp",
              "minHeight": "80dp",
              "description": "Recent 7 days with your memory entries",
              "previewImage": "./assets/widget-preview.png",
              "resizeMode": "horizontal"
            }
          ]
        }
      ]
    ],
    "scheme": "plantmemory",
    "experiments": {
      "typedRoutes": true
    }
  }
}